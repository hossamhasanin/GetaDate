<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Ui.Fragments.MainPage.AnswerQuestionsFragment">
    <ImageView
            android:src="@drawable/lower_tool_box2"
            android:layout_width="413dp"
            android:layout_height="72dp"
            android:id="@+id/imageView5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:scaleType="fitXY"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            tools:text="سؤالك الي هتجاوبه ؟"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/darker_blue"
            android:id="@+id/question" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:fontFamily="@font/cairo_bold" android:textSize="18sp" app:layout_constraintHorizontal_bias="0.497"
            android:layout_marginTop="60dp" app:layout_constraintTop_toBottomOf="@+id/loading"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/answers" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/question"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/loading"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.498" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView5"/>
</androidx.constraintlayout.widget.ConstraintLayout>