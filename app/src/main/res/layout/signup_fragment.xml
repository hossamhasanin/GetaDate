<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context=".Ui.Fragments.SignupLogin.SignupFragment"
        xmlns:app="http://schemas.android.com/apk/res-auto"
>
<androidx.constraintlayout.widget.ConstraintLayout
android:layout_width="match_parent"
android:layout_height="wrap_content">
    <TextView
            android:text="@string/email_lable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="?attr/mainTextColor"
            android:fontFamily="@font/cairo_bold"
            android:id="@+id/email_re" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.893"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="4dp"/>

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="@string/enter_your_email"
            android:ems="10"
            android:background="@drawable/purble_textfield"
            android:id="@+id/email_entry_signup"
            android:fontFamily="@font/cairo_regular"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="4dp"
            android:paddingEnd="10dp"
            app:layout_constraintTop_toBottomOf="@+id/email_re" android:textSize="14sp"/>

    <TextView
            android:text="@string/password_lable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="?attr/mainTextColor"
            android:fontFamily="@font/cairo_bold"
            android:id="@+id/password_re"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.912"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/address_entry_signup"/>

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="@string/enter_your_password"
            android:ems="10"
            android:textAlignment="textEnd"
            android:background="@drawable/purble_textfield"
            android:id="@+id/password_entry_signup"
            android:fontFamily="@font/cairo_regular"
            android:paddingEnd="10dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/password_re" android:textSize="14sp"/>

    <TextView
            android:text="@string/username_lable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="?attr/mainTextColor"
            android:fontFamily="@font/cairo_bold"
            android:id="@+id/username" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.903"
            app:layout_constraintTop_toBottomOf="@+id/email_entry_signup" android:layout_marginTop="8dp"/>

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/enter_username"
            android:ems="10"
            android:background="@drawable/purble_textfield"
            android:id="@+id/username_entry_signup"
            android:fontFamily="@font/cairo_regular"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:paddingEnd="10dp"
            app:layout_constraintTop_toBottomOf="@+id/username" android:textSize="14sp"/>

    <TextView
            android:text="@string/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="?attr/mainTextColor"
            android:fontFamily="@font/cairo_bold"
            android:id="@+id/address" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.903"
            app:layout_constraintTop_toBottomOf="@+id/username_entry_signup" android:layout_marginTop="8dp"/>

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/enter_address"
            android:ems="10"
            android:background="@drawable/purble_textfield"
            android:id="@+id/address_entry_signup"
            android:fontFamily="@font/cairo_regular"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:paddingEnd="10dp"
            app:layout_constraintTop_toBottomOf="@+id/address" android:textSize="14sp"/>


    <Button
            android:text="@string/sign_up_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/signupbtn"
            android:background="@drawable/purple_round_button"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:fontFamily="@font/cairo_bold"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout2"/>
    <Button
            android:text="حدد تارخ الميلاد"
            android:layout_width="158dp"
            android:layout_height="wrap_content"
            android:background="@drawable/purble_textfield"
            android:textColor="@color/shade1_blue"
            android:textAllCaps="false"
            android:fontFamily="@font/cairo_bold"
            android:textSize="16sp"
            android:id="@+id/set_birth_date" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/password_entry_signup"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="1.0"/>
    <Spinner android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/purble_textfield"
            android:paddingEnd="10dp"
            app:layout_constraintTop_toBottomOf="@+id/set_birth_date" android:id="@+id/governorates"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/governorates" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:id="@+id/linearLayout2" android:layout_marginTop="8dp">
        <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/accept_terms" android:layout_weight="1"/>
        <TextView
                android:text="وافق على الشروط و الاحكام"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/see_terms" android:layout_weight="9"
                android:gravity="end" android:textDirection="ltr" android:fontFamily="@font/cairo_regular"
                android:textColor="@color/shade1_blue"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>