<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Ui.Fragments.MainPage.CardsFragment">

    <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="390dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="56dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:id="@+id/cardView"
            app:cardBackgroundColor="#fff" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.071">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="?attr/backgroundColor"
                    android:id="@+id/user_characteristics"
                    android:visibility="gone"
                    android:paddingStart="10dp"
                    android:paddingLeft="10dp" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/user_card_username"/>
            <TextView
                    android:text="اسم المستخدم"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/user_card_username"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                    app:layout_constraintStart_toEndOf="@+id/user_card_validaty"
                    android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="1.0"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:textColor="#000"
                    android:fontFamily="@font/cairo_semibold"/>
            <TextView
                    android:text="موثق"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/user_card_validaty" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" android:textColor="#4CAF50"
                    android:fontFamily="@font/cairo_regular" android:visibility="gone"/>
            <TextView
                    android:text="@string/loading_the_characteristics"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/cairo_regular"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/alert_mess" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <ImageView
            android:src="@drawable/liked_pic"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/like" app:layout_constraintStart_toEndOf="@+id/dislike"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.585" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/cardView"/>
    <ImageView
            android:src="@drawable/red_circle"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/dislike" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="72dp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/cardView"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pro"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/cardView" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:visibility="gone"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintVertical_bias="0.101"/>
</androidx.constraintlayout.widget.ConstraintLayout>