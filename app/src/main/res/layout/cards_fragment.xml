<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Ui.Fragments.MainPage.CardsFragment">

    <ImageView
            android:src="@drawable/lower_tool_box2"
            android:layout_width="413dp"
            android:layout_height="72dp"
            android:id="@+id/imageView5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:scaleType="fitXY"
            app:layout_constraintTop_toTopOf="parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cardView"
            android:layout_marginTop="28dp" app:layout_constraintTop_toTopOf="@+id/imageView5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp">

        <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline2" app:layout_constraintGuide_begin="319dp" android:orientation="horizontal"/>
        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/user_characteristics"
                android:visibility="visible"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:background="@drawable/circle_card"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="@+id/user_characteristics" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/guideline2">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/text_cont1" android:gravity="center"
                    android:fontFamily="@font/cairo_bold" android:textSize="18sp" android:layout_marginTop="20dp"
                    android:textColor="#fff" tools:text="TextView"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/text_cont2"
                    android:fontFamily="@font/cairo_regular"
                    android:gravity="center" android:textSize="18sp" android:textColor="#fff" tools:text="TextView"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageView
            android:src="@drawable/liked_pic"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/like" app:layout_constraintStart_toEndOf="@+id/dislike"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.551"
            app:layout_constraintTop_toBottomOf="@+id/cardView" android:layout_marginTop="100dp"/>
    <ImageView
            android:src="@drawable/red_circle"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/dislike" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="88dp"
            app:layout_constraintTop_toBottomOf="@+id/cardView" android:layout_marginTop="100dp"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pro"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:visibility="gone"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintTop_toBottomOf="@+id/cardView"
            android:layout_marginTop="40dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>