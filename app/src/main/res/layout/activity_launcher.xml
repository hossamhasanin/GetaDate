<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Ui.LauncherActivity"
        android:theme="@style/Theme.AppCompat.NoActionBar">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/normal_background"
            android:id="@+id/background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:scaleType="centerCrop"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="-1dp"
            android:background="#fff" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.483"
            app:layout_constraintTop_toTopOf="@+id/background"
            app:layout_constraintBottom_toBottomOf="@+id/background" app:layout_constraintVertical_bias="0.499"
            android:id="@+id/center_white">
    </LinearLayout>
    <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp" app:srcCompat="@drawable/logo2"
            android:id="@+id/logo" app:layout_constraintStart_toStartOf="@+id/center_white"
            app:layout_constraintEnd_toEndOf="@+id/center_white" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/background"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent" android:alpha="0"/>

</androidx.constraintlayout.widget.ConstraintLayout>