<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/item_expandable_header_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_card_box" android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp">
    <TextView
            android:id="@+id/header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            tools:text="Group 1" android:fontFamily="@font/cairo_regular"/>
    <ImageView
            android:id="@+id/item_expandable_header_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/header_title"
            app:srcCompat="@drawable/ic_keyboard_arrow_down_black_24dp"
            android:tint="#F7F7F7" android:layout_marginTop="4dp"/>
</RelativeLayout>