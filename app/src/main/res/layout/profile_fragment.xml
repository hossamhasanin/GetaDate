<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Ui.Fragments.MainPage.ProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <!--<ImageView-->
                <!--android:src="@drawable/lower_tool_box2"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="72dp"-->
                <!--android:id="@+id/imageView5" app:layout_constraintEnd_toEndOf="parent"-->
                <!--app:layout_constraintStart_toStartOf="parent" android:scaleType="fitXY"-->
                <!--app:layout_constraintTop_toTopOf="parent"/>-->
        <!--<TextView-->
                <!--android:text="@string/profile"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:textColor="@color/white"-->
                <!--android:fontFamily="@font/cairo_bold"-->
                <!--android:id="@+id/textView11" app:layout_constraintStart_toStartOf="@+id/imageView5"-->
                <!--app:layout_constraintEnd_toEndOf="@+id/imageView5" android:layout_marginEnd="8dp"-->
                <!--app:layout_constraintTop_toTopOf="@+id/imageView5" android:layout_marginTop="8dp"-->
                <!--app:layout_constraintHorizontal_bias="0.508" android:textSize="24sp"/>-->


        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:background="@drawable/circle_card"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintHorizontal_bias="0.498"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/imageView">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/text_cont1" android:gravity="center"
                    android:fontFamily="@font/cairo_bold" android:textSize="18sp" android:layout_marginTop="20dp"
                    android:textColor="#fff" tools:text="TextView"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/text_cont2"
                    android:fontFamily="@font/cairo_regular"
                    android:gravity="center" android:textSize="18sp" android:textColor="#fff" tools:text="TextView"/>
        </LinearLayout>
        <ImageView
                android:src="@drawable/lower_tool_box2"
                android:layout_width="413dp"
                android:layout_height="72dp"
                android:id="@+id/imageView" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:scaleType="fitXY"
                app:layout_constraintTop_toTopOf="parent"/>
        <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar_profile"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:indeterminate="true" android:visibility="gone" app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
        />


        <Button
                android:id="@+id/add_more_questions"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/add_more"
                android:fontFamily="@font/cairo_regular"
                android:background="@drawable/rounded_button_baby_blue"
                android:textColor="@android:color/white"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" android:gravity="start"/>

        <TextView
                android:text="@string/edit_characteristics"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/edit_characteristics"
                android:background="@drawable/borderd_box"
                android:drawableStart="@drawable/ic_keyboard_arrow_left_24dp"
                app:layout_constraintTop_toBottomOf="@+id/add_more_questions"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/cairo_regular"
                android:textColor="#000"
                android:padding="10dp" android:layout_marginTop="8dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>